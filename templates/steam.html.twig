{% extends 'main.html.twig' %}

{% block title %}Steam in-game homepage{% endblock %}

{% block custom_style %}
    <style>
        div {
            text-align: center;
        }

        .btn-primary, .btn-primary:hover {
            color: var(--bs-light) !important;
        }
    </style>
{% endblock %}

{% block body_class %}bg-dark{% endblock %}

{% block body %}
    <div class="container" style="padding-top: 18vh">
        <div class="d-flex flex-column">
            <div class="p-4">
                <img src="https://static.maclews.eu/ml.svg" alt="" style="height: 9rem; width: auto">
            </div>
            <div class="p-4">
                <form action="https://www.google.com/search" method="get" class="w-auto text-center" autocomplete="off">
                    <div class="input-group justify-content-center">
                        <button class="btn btn-lg btn-primary" type="button" data-bs-toggle="dropdown"
                                aria-expanded="false"><i class="bi bi-google"></i></button>
                        <ul class="dropdown-menu">
                            <li><a href="#" class="dropdown-item">se1</a></li>
                            <li><a href="#" class="dropdown-item">se2</a></li>
                            <li><a href="#" class="dropdown-item">se3</a></li>
                        </ul>
                        <label class="d-none" for="q"></label>
                        <input type="text" name="q" id="q" class="bg-light bg-opacity-10 form-control form-control-lg border-primary text-light">
                        <button type="submit" class="btn btn-lg btn-primary"><i class="bi bi-search"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="position-fixed bottom-0 w-100">
        <div class="container text-light">
            <footer class="py-3 my-4">
                <ul class="nav justify-content-center border-bottom border-secondary pb-3 mb-3">
                    <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Home</a></li>
                    <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Features</a></li>
                    <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Pricing</a></li>
                    <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">FAQs</a></li>
                    <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">About</a></li>
                    <li class="nav-item"><a href="{{ path('app_steam_homepage') }}" class="nav-link px-2 text-muted">Steam</a></li>
                </ul>
                <p class="text-center text-muted">Â© {{ "now"|date("Y") }} maclews.eu</p>
            </footer>
        </div>
    </div>
{% endblock %}